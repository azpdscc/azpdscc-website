rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to everyone for events and team members
    // For a real production app, you would want more granular security rules
    // and proper authentication. This is set up for prototype purposes.
    match /events/{eventId} {
      allow read, write: if true;
    }

    match /teamMembers/{memberId} {
      allow read, write: if true;
    }
    
    match /sponsors/{sponsorId} {
      allow read, write: if true;
    }
  }
}
