rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- PUBLIC-READ, ADMIN-WRITE COLLECTIONS ---
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /sponsors/{sponsorId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /subscribers/{subscriberId} {
      allow read: if request.auth != null;
      allow write: if true; // Allow anyone to subscribe
    }

    // --- ADMIN-ONLY COLLECTIONS (except for creates) ---
    match /adminLogs/{logId} {
        allow read, write: if request.auth != null;
    }

    match /vendorApplications/{appId} {
        // Allow anyone to create (submit) an application.
        allow create: if true;
        // Only allow admins to read, update, or delete applications.
        allow read, update, delete: if request.auth != null;
    }

    match /performanceRegistrations/{appId} {
      // Allow anyone to create (submit) an application.
      allow create: if true;
      // Only allow admins to read, update, or delete applications.
      allow read, update, delete: if request.auth != null;
    }
  }
}
