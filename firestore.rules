rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are temporarily open for development.
    // See SECURITY.md for instructions on how to secure your app.
    match /events/{eventId} {
      allow read: if true;
      allow write: if true; // Insecure: Allows anyone to write. Secure this before production.
    }

    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if true; // Insecure: Allows anyone to write. Secure this before production.
    }
  }
}
