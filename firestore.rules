rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- PUBLIC-READ, ADMIN-WRITE COLLECTIONS ---
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // Managed via admin panel, not direct auth
    }

    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if false;
    }

    match /sponsors/{sponsorId} {
      allow read: if true;
      allow write: if false;
    }

    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if false;
    }

    // --- PUBLIC-WRITE, ADMIN-READ COLLECTIONS ---
    match /subscribers/{subscriberId} {
      allow read: if false; // No one should read the subscriber list
      allow create: if true; // Allow anyone to subscribe
      allow update, delete: if false;
    }

    match /vendorApplications/{appId} {
      allow read, update, delete: if false; // Admins read through a secure backend
      allow create: if true; // Allow anyone to apply
    }

    match /performanceRegistrations/{appId} {
      allow read, update, delete: if false;
      allow create: if true; // Allow anyone to apply
    }

    // --- Other public forms can have similar rules if needed ---
    // Example for a contact form if it were to save to Firestore:
    // match /contactInquiries/{inquiryId} {
    //   allow create: if true;
    //   allow read, update, delete: if false;
    // }

  }
}
